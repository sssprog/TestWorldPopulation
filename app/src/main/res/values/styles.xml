<resources>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <string name="font_robot_light">fonts/Roboto-Light.ttf</string>
    <string name="font_robot_regular">fonts/Roboto-Regular.ttf</string>
    <string name="font_robot_medium">fonts/Roboto-Medium.ttf</string>
    <string name="font_robot_bold">fonts/Roboto-Bold.ttf</string>

    <style name="TextAppearance.AppTheme.Caption" parent="TextAppearance.AppCompat.Caption">
        <item name="fontPath">@string/font_robot_regular</item>
        <item name="android:textSize">@dimen/abc_text_size_caption_material</item>
    </style>

    <style name="TextAppearance.AppTheme.Display1" parent="TextAppearance.AppCompat.Display1">
        <item name="fontPath">@string/font_robot_regular</item>
        <item name="android:textSize">34sp</item>
    </style>

    <style name="TextAppearance.AppTheme.Headline" parent="TextAppearance.AppCompat.Headline">
        <item name="fontPath">@string/font_robot_regular</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextAppearance.AppTheme.Body1" parent="TextAppearance.AppCompat.Body1">
        <item name="fontPath">@string/font_robot_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.AppTheme.Body2" parent="TextAppearance.AppCompat.Body2">
        <item name="fontPath">@string/font_robot_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.AppTheme.Subhead" parent="TextAppearance.AppCompat.Subhead">
        <item name="fontPath">@string/font_robot_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.AppTheme.Title" parent="TextAppearance.AppCompat.Title">
        <item name="fontPath">@string/font_robot_medium</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearance.AppTheme.Button" parent="TextAppearance.AppCompat.Button">
        <item name="fontPath">@string/font_robot_medium</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.AppTheme.Tab" parent="TextAppearance.Design.Tab">
        <item name="fontPath">@string/font_robot_medium</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#99FFFFFF</item>
    </style>

    <style name="AppWidget" />

    <style name="AppWidget.TabLayout">
        <item name="tabIndicatorColor">@color/accent_100</item>
        <item name="tabTextAppearance">@style/TextAppearance.AppTheme.Tab</item>
        <item name="tabSelectedTextColor">@color/accent_100</item>
        <item name="android:elevation">@dimen/action_bar_elevation</item>
        <item name="android:background">@color/primary</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

</resources>
